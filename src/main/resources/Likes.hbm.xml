<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.hibernate.pojos.Likes" table="likes" schema="public" catalog="socialnetwork">
        <composite-id mapped="true" class="com.hibernate.pojos.LikesPK">
            <key-property name="likesPersonId" column="likes_person_id"/>
            <key-property name="likesMessageId" column="likes_message_id"/>
        </composite-id>
        <property name="likesCreationDate" column="likes_creation_date"/>
    </class>
</hibernate-mapping>