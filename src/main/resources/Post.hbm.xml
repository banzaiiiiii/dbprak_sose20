<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.pojos.Post" table="post" schema="public" catalog="socialnetwork">
        <id name="postId" column="post_id"/>
        <property name="postMessageId" column="post_message_id"/>
        <property name="postForumId" column="post_forum_id"/>
        <property name="postLanguage" column="post_language"/>
        <property name="postImageFile" column="post_image_file"/>
    </class>
</hibernate-mapping>